@page
@model SchoolProject2.Areas.Teacher.Pages.EditScheduleModel
@{
    ViewData["Title"] = "Edit schedule";
}

<div>
    <div class="mb-10 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold">Edit Schedule</h1>
            <p class="text-gray-500">Fill the form</p>
        </div>
    </div>

    <form class="max-w-2xl" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Schedule.ScheduleId" />
        <div class="grid grid-cols-1 md:grid-cols-2 md:gap-x-10 md:gap-y-5">
            <div>
                <select asp-for="@Model.Schedule.DayOfWeek" asp-items="Html.GetEnumSelectList<DayOfWeek>()">
                    <option value="">Choose a day</option>
                </select>
            </div>
            <div>
                <input asp-for="Schedule.StartTime" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100"></>
                <span asp-validation-for="Schedule.StartTime" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="Schedule.EndTime" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100"></>
                <span asp-validation-for="Schedule.EndTime" class="text-danger"></span>
            </div>
            <div>
                <select asp-for="@Model.Schedule.CourseId">
                    <option value="">Select One Course</option>
                    @foreach (var course in Model.Courses)
                    {
                        <option value="@course.CourseId">@course.CourseName</option>
                    }
                </select>
            </div>
        </div>
        <div>
            <div class="flex justify-end items-center gap-6 mt-16">
                <a asp-area="Teacher" asp-page="AllSchedules" class="text-gray-500 hover:text-gray-900">Back to list</a>
                <button name="submit"
                        type="submit"
                        class="px-10 py-4 bg-pink-500 hover:bg-pink-800 text-white font-semibold rounded">
                    Update Schedule
                </button>
            </div>
        </div>
    </form>
</div>