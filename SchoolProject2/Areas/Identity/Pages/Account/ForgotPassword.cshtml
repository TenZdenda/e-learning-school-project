@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="px-10 md:px-0 w-full md:w-96">
    <div class="mb-12">
        <h1 class="text-3xl font-bold">Hello 👋,</h1>
        <span class="text-xl block text-gray-500">Sign in and do something</span>
    </div>
    <form method="post">
        <div class="form-group">
            <input asp-for="Input.Email" placeholder="Your email" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100" />
            <span asp-validation-for="Input.Email" class="text-red-600"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="bg-purple-600 hover:bg-purple-800 text-white py-3 text-center w-full font-bold mx-auto block rounded mt-10">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
