@using SchoolProject2.Utility

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolProject2</title>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="p-10 space-x-10">
        <div class="flex justify-between mb-10">
            <div>
                <h1 class="text-3xl font-bold">Manage your account</h1>
            </div>
            <div>
                <a asp-area="Admin" asp-page="/Index" class="bg-gray-300 hover:bg-gray-600 text-gray-400 hover:text-gray-600 font-semibold py-2 px-6 rounded mx-auto md:mx-0 my-4 md:my-0 block focus:outline-none text-center">
                    Back to admin panel
                </a>
            </div>
        </div>
        <div class="flex">
            <div width="w-96">
                <partial name="_ManageNav" />
            </div>
            <div class="flex-1">
                <div class="flex h-screen">
                    <div class="mx-auto">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>