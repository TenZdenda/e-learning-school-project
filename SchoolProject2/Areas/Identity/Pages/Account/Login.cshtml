@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div>
    <section class="px-10 md:px-0 w-full md:w-96">
        <div class="mb-12">
            <h1 class="text-3xl font-bold">Hello 👋,</h1>
            <span class="text-xl block text-gray-500">Sign in and do something</span>
        </div>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input asp-for="Input.Email" placeholder="Your email" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100" />
                <span asp-validation-for="Input.Email" class="text-red-600"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" placeholder="Your password" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100" />
                <span asp-validation-for="Input.Password" class="text-red-600"></span>
            </div>
            <div class="form-group">
                <div class="checkbox my-5">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="bg-purple-600 hover:bg-purple-800 text-white py-3 text-center w-full font-bold mx-auto block rounded mt-10">Log in</button>
            </div>
            <div class="form-group text-center mt-10">
                <p class="text-center block text-black">
                    <a id="forgot-password" class="hover:text-pink-700" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <hr class="my-5" />
                <p class="text-center block text-black">
                    Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="font-bold hover:text-pink-700">Create one</a>!
                </p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
