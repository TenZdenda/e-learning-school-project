@page
@model SchoolProject2.Areas.Admin.Pages.CreateTeacherModel

<div class="container">
    <div class="row mb-2">
        <div class="col">
            <h1 class="text-info">Create New Teacher</h1>
        </div>
    </div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-2">
            <div class="col-2">
                <label>Name</label>
            </div>
            <div class="col-6">
                @*<input asp-for="Teacher.Name" class="form-control" />*@
                <label asp-for="@Model.Teacher.Name" class="control-label"></label>
                <input asp-for="@Model.Teacher.Name" class="form-control" />
                <span asp-validation-for="@Model.Teacher.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label>Email</label>
            </div>
            <div class="col-6">
                @*<input asp-for="Teacher.Email" class="form-control" />*@
                <label asp-for="@Model.Teacher.Email" class="control-label"></label>
                <input asp-for="@Model.Teacher.Email" class="form-control" />
                <span asp-validation-for="@Model.Teacher.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label>Password</label>
            </div>
            <div class="col-6">
                @*<input asp-for="Teacher.Password" class="form-control" />*@
                <label asp-for="@Model.Teacher.Password" class="control-label"></label>
                <input asp-for="@Model.Teacher.Password" class="form-control" />
                <span asp-validation-for="@Model.Teacher.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-2">
                <label>Confirm password</label>
            </div>
            <div class="col-6">
                @*<input asp-for="Teacher.ConfirmPassword" class="form-control" />*@
                <label asp-for="@Model.Teacher.ConfirmPassword" class="control-label"></label>
                <input asp-for="@Model.Teacher.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.Teacher.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary offset-2">Create</button>
    </form>
</div>
<div>
    <a asp-page="AllTeachers">Back to List</a>
</div>
