@page
@model SchoolProject2.Areas.Admin.Pages.CreateTeacherModel

<div>
    <div class="mb-10 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold">Add new teacher</h1>
            <p class="text-gray-500">Fill the form</p>
        </div>
    </div>

    <form class="max-w-2xl">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="grid grid-cols-1 md:grid-cols-2 md:gap-x-10 md:gap-y-5">
            <div>
                <input asp-for="@Model.Teacher.Name" placeholder="Teacher's name" class="form-control" />
                <span asp-validation-for="@Model.Teacher.Name" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="@Model.Teacher.Email" placeholder="Teacher's email" class="form-control" />
                <span asp-validation-for="@Model.Teacher.Email" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="@Model.Teacher.Password" placeholder="Teacher's password" class="form-control" />
                <span asp-validation-for="@Model.Teacher.Password" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="@Model.Teacher.ConfirmPassword" placeholder="Teacher's password again" class="form-control" />
                <span asp-validation-for="@Model.Teacher.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="flex justify-end items-center gap-6 mt-16">
                <a href="#" class="text-gray-500 hover:text-gray-900">Cancel</a>
                <button name="submit"
                        type="submit"
                        class="px-10 py-4 bg-pink-500 hover:bg-pink-800 text-white font-semibold rounded">
                    Create new teacher
                </button>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-page="AllTeachers">Back to List</a>
</div>
