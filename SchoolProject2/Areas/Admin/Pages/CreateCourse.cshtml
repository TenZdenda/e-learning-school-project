@page
@model SchoolProject2.Areas.Admin.Pages.CreateCourseModel

<div>
    <div class="mb-10 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold">Add new course</h1>
            <p class="text-gray-500">Fill the form</p>
        </div>
    </div>

    <form class="max-w-2xl" method="post">
        <div class="grid grid-cols-1 md:grid-cols-2 md:gap-x-10 md:gap-y-5">
            <div>
                <input asp-for="@Model.Course.CourseName" placeholder="Course name" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100" />
                <span asp-validation-for="@Model.Course.CourseName" class="text-danger"></span>
            </div>
            <div>
                <input asp-for="@Model.Course.Duration" placeholder="Course duration" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100" />
                <span asp-validation-for="@Model.Course.Duration" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="flex justify-end items-center gap-6 mt-16">
                <a asp-page="AllCourses" class="text-gray-500 hover:text-gray-900">Back to list</a>
                <button name="submit"
                        type="submit"
                        class="px-10 py-4 bg-pink-500 hover:bg-pink-800 text-white font-semibold rounded">
                    Create new course
                </button>
            </div>
        </div>
    </form>
</div>
