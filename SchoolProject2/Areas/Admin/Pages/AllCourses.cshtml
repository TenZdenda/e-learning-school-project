@page
@model SchoolProject2.Areas.Admin.Pages.AllCoursesModel
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-info">All Courses</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-striped">
                    <thead class="table-info">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Duration</th>
                            <th>TeacherId</th>
                            <th></th>
                        </tr>
                    <tbody>

                        @if (Model.Courses != null)
                        {
                            @foreach (var item in Model.Courses)
                            {
                                <tr>
                                    <td>  @item.CourseId</td>
                                    <td>  @item.CourseName  </td>
                                    <td>  @item.Duration </td>
                                    <td>  @item.UserId </td>
                                    <td><input type="submit" class="btn btn-danger" asp-route-id="@item.CourseId" value="Delete" /></td>
                                    <td><a class="btn btn-success" asp-page="EditStudent" asp-route-id="@item.CourseId">Edit</a></td>
                                </tr>
                            }
                        }
                </table>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-page="Index">Back to Admin Panel</a>
</div>



