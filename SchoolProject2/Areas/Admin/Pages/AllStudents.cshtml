@page
@model SchoolProject2.Areas.Admin.Pages.AllStudentsModel
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="text-info">All Students</h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <table class="table table-striped">
                        <thead class="table-info">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th></th>
                            </tr>
                        <tbody>

                            @if (Model.Students != null)
                            {
                                @foreach (var item in Model.Students)
                                {
                                    <tr>
                                        <td>  @item.Id</td>
                                        <td>  @item.Name  </td>
                                        <td>  @item.Email </td>
                                        <td>  @item.PhoneNumber </td>
                                        <td><input type="submit" class="btn btn-danger" asp-route-id="@item.Id" value="Delete"/></td>
                                    </tr>
                                }
                            }
                    </table>
                </div>
            </div>
        </div>
    </form>
    <div>
        <a asp-page="Index">Back to Admin Panel</a>
    </div>

