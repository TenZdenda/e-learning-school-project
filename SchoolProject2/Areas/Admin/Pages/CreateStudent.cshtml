@page
@model SchoolProject2.Areas.Admin.Pages.CreateStudentModel


    <div class="container">
        <div class="row mb-2">
            <div class="col">
                <h1 class="text-info">Create New Student</h1>
            </div>
        </div>
        <form method="post">
            <div class="row mb-2">
                <div class="col-2">
                    <label>Name</label>
                </div>
                <div class="col-6">
                    <input asp-for="Student.Name" class="form-control" />
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    <label>Email</label>
                </div>
                <div class="col-6">
                    <input asp-for="Student.Email" class="form-control" />
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    <label>Password</label>
                </div>
                <div class="col-6">
                    <input asp-for="Student.Password" class="form-control" />
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-2">
                    <label>Confirm password</label>
                </div>
                <div class="col-6">
                    <input asp-for="Student.ConfirmPassword" class="form-control" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary offset-2">Create</button>
</form>
    </div>