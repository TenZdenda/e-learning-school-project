@page "/Admin/EditStudent/{id}"
@model SchoolProject2.Areas.Admin.Pages.EditStudentModel
@{
    ViewData["Title"] = "Edit student";
}

<div>
    <div class="mb-10 flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold">Edit student</h1>
            <p class="text-gray-500">Fill the form</p>
        </div>
    </div>

    <form class="max-w-2xl" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="grid grid-cols-1 md:grid-cols-2 md:gap-x-10 md:gap-y-5">
            <div>
                <input asp-for="Input.Name" placeholder="Student's name" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div>
                <select asp-for="Input.CurrentRoleName" asp-items="Model.Input.AllRoles" class="w-full h-15 px-5 py-4 my-2 outline-none rounded bg-gray-100"></select>
                <span asp-validation-for="Input.CurrentRoleName" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="flex justify-end items-center gap-6 mt-16">
                <button name="submit"
                        type="submit"
                        class="px-10 py-4 bg-pink-500 hover:bg-pink-800 text-white font-semibold rounded">
                    Update student
                </button>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-page="AllStudents">Back to List</a>
</div>
