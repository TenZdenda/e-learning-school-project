    ViewData["Title"] = "Home page";
}

<section>
    <div class="md:flex">
        <img src="~/images/home-image.jpg" alt="Homepage" class="w-full md:w-1/2 object-cover object-right"/>
        <div class="bg-yellow-200 w-full flex" style="color: #260b42">
            <div class="max-w-lg space-y-10 m-auto p-4">
                <h1 class="text-4xl font-bold">
                    Probably, the best school you can find!
                </h1>
                <div class="space-y-8">
                    <p>
                        Hello, my name is Eliza! And I started this school as the Danish language school. As I am myself fluent in Danish & wanted to help people to better their pronunciation, grammar & talking skills.
