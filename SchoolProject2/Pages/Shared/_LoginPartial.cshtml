@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="md:flex md:items-center md:space-x-6">
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a class="hover:text-blue-500" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
    </li>
    <li>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button type="submit" class="hover:text-blue-500">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="hover:text-blue-500" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Login" class="bg-blue-500 hover:bg-blue-800 text-white rounded font-medium px-8 py-3">Login</a>
    </li>
}
</ul>
