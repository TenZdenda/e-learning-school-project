@using SchoolProject2.Utility

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolProject2</title>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="w-full p-5 flex items-center justify-between bg-white border-b border-gray-200 text-black">
            <div class="flex items-center space-x-2 hover:text-blue-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                </svg>
                <a asp-page="/Index" class="text-2xl font-bold">DanlabSchool</a>
            </div>
            <div class="md:flex md:items-center md:space-x-10">
                <ul class="md:flex md:space-x-6">
                    <li>
                        <a class="hover:text-blue-500" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li>
                        <a class="hover:text-blue-500" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                    @if (User.IsInRole(SD.AdminUser))
                    {
                        <li>
                            <a class="hover:text-blue-500" asp-area="Admin" asp-page="/Index">Admin Zone</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.StudentUser))
                    {
                        <li>
                            <a class="hover:text-blue-500" asp-area="Student" asp-page="/Index">Student Zone</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.TeacherUser))
                    {
                        <li>
                            <a class="hover:text-blue-500" asp-area="Teacher" asp-page="/Index">Teacher Zone</a>
                        </li>
                    }
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>

    <div class="w-full p-10">
        @RenderBody()
    </div>

    <footer class="w-full bg-gray-900 px-32 py-10 bottom-0">
        <div class="md:flex text-gray-100 justify-between">
            <div>
                <div class="flex items-center space-x-2 hover:text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path d="M12 14l9-5-9-5-9 5 9 5z" />
                        <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                    </svg>
                    <a asp-page="/Index" class="text-2xl font-bold">DanlabSchool</a>
                </div>
                <p class="text-gray-400">School project is fine project.</p>
            </div>
            <div class="space-y-5">
                <h2 class="text-2xl font-bold">Links</h2>
                <ul class="space-y-3 font-medium text-gray-300">
                    <li>
                        <a class="hover:text-blue-500" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li>
                        <a class="hover:text-blue-500" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
            <div class="space-y-5">
                <h2 class="text-2xl font-bold">Authors</h2>
                <ul class="space-y-3 font-medium text-gray-300">
                    <li>Razu Ahmed</li>
                    <li>Vladimir Shumilin</li>
                    <li>Zdeněk Pašek</li>
                    <li>Andrei Sarbu</li>
                    <li>Natalie Nayana Christiansen</li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
